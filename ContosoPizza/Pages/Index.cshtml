@page
@model IndexModel
@{
    // Set value of Title item
    ViewData["Title"] = "The Home for Pizza Lovers";
    // Calculate amount of time that has passed since the business opened
    TimeSpan timeInBusiness = DateTime.Now - new DateTime(2018, 8, 14);
}

<div class="text-center">
    <h1 class="display-4">Welcome to Contoso Pizza</h1>
    <p class="lead">The best pizza in down for @Convert.ToInt32(timeInBusiness.TotalDays) days!</p>
</div>
